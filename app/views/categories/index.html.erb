
<h2>CATEGORIES</h2>

<%= paginate @categories, theme: 'twitter-bootstrap-3' %>

<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |categorie| %>
        <tr>
          <td><%= categorie.id %></td>

          <td>
            <%= categorie.name %>
          </td>

          <td><%= categorie.created_at %></td>
          <td>
            <%= link_to "Edit", edit_category_path(categorie.id), :class => 'btn btn-default'  %>
            <%= link_to "Delete", categorie, data: {confirm: "Are you sure?"}, :method => :delete,:class => 'btn btn-default btn-danger'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @categories, theme: 'twitter-bootstrap-3' %>
</div>

<%= link_to "New", new_category_path, class: "btn btn-default btn-primary" %>

<div class="row" style="height: 30px"></div>
