
	
	<%= form_for @category, :html => {:class => "form-horizontal center"} do |f| %>	

	  <h2>EDIT CATEGORY</h2>
	  
		<div class="form-group">
		  <%= f.label :name, "Name:", :class => "control-label col-lg-2" %></br>
		  <div class="col-lg-4">
	        <%= f.text_field :name, :class => 'form-control' %>
	      </div>
	    </div>

		<div class="form-group">
	      <div class="col-lg-offset-2 col-lg-4">
			<%= f.submit "Update Category", class: "btn btn-default btn-primary" %>
			<%= link_to "Cancel", categories_path ,:class => 'btn btn-default' %>
		  </div>
		</div>
	<% end %>
