
<h2>INCOMES</h2>

<%= paginate @incomes, theme: 'twitter-bootstrap-3' %>

<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Amount</th>
        <th>Categories</th>
        <th>Issued At</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @incomes.each do |income| %>
        <tr>
          <td><%= income.id %></td>

          <td>
            <%= income.amount %>
          </td>

          <td><%= income.categories.map{|c| c.name}.join(', ') %></td>
          <td><%= income.created_at %></td>
          <td>
            <%= link_to "Edit", edit_income_path(income.id) , :class => 'btn btn-default'  %>
            <%= link_to "Delete", income, data: {confirm: "Are you sure?"}, :method => :delete, :class => 'btn btn-default btn-danger'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @incomes, theme: 'twitter-bootstrap-3' %>
</div>

<%= link_to "New", new_income_path, class: "btn btn-default btn-primary" %>
  
<div class="row" style="height: 30px; margin-left: 10px;"></div>