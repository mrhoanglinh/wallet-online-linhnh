
<h2>COSTS</h2>

<%= paginate @costs, theme: 'twitter-bootstrap-3' %>

<div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Amount</th>
        <th>Categories</th>
        <th>Issued At</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @costs.each do |cost| %>
        <tr>
          <td><%= cost.id %></td>

          <td>
            <%= cost.amount %>
          </td>

          <td><%= cost.categories.map{|c| c.name}.join(', ') %></td>
          <td><%= cost.created_at %></td>
          <td>
            <%= link_to "Edit", edit_cost_path(cost.id) , :class => 'btn btn-default'  %>
            <%= link_to "Delete", cost, data: {confirm: "Are you sure?"}, :method => :delete, :class => 'btn btn-default btn-danger'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @costs, theme: 'twitter-bootstrap-3' %>
</div>
<%= link_to "New", new_cost_path, class: "btn btn-default btn-primary" %>

<div class="row" style="height: 30px"></div>
